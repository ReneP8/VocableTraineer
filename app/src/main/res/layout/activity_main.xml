<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="@string/btnShowVocables"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnShowVocables"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="showVocables" android:textSize="18sp"
            android:backgroundTint="@android:color/holo_blue_dark" android:textColor="@android:color/background_light"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnNewVacableActivity"/>
    <Button
            android:text="@string/BtnNewVocableAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnNewVacableActivity" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="showNewVocAct" android:textSize="18sp"
            android:backgroundTint="@android:color/holo_blue_dark" android:textColor="@android:color/background_light"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.898"/>
    <TextView
            android:layout_width="374dp"
            android:layout_height="560dp"
            android:id="@+id/textView" android:textSize="24sp"
            android:textColor="@android:color/holo_blue_dark" android:textAlignment="center"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
